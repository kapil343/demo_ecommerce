<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <h2 class="text-light ">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-outline mb-4 text-light">
      <%= f.label :password, "New password", class: "form-label" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-outline mb-4 text-light">
      <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "actions mb-2 text-dark btn btn-warning mt-3 " %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>