<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <h2 class="text-light ">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, class: "text-light" %>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :name, class: "form-label" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
    </div>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :phone, class: "form-label" %><br />
      <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
    </div>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
      <%= f.fields_for :addresses do |address_fields| %>
        <div class="field form-outline mb-4 text-light">
          <%= address_fields.label :state, class: "form-label" %><br />
          <%= address_fields.text_field :state, autofocus: true, autocomplete: "state", class: "form-control" %>
        </div>
        <div class="field form-outline mb-4 text-light">
          <%= address_fields.label :city, class: "form-label" %><br />
          <%= address_fields.text_field :city, autofocus: true, autocomplete: "city", class: "form-control" %>
        </div>
        <div class="field form-outline mb-4 text-light">
          <%= address_fields.label :pincode, class: "form-label" %><br />
          <%= address_fields.text_field :pincode, autofocus: true, autocomplete: "pincode", class: "form-control" %>
        </div>
      <% end %>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
        <em class="text-light">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="field form-outline mb-4 text-light">
      <%= f.label :password_confirmation, class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "actions mb-2 text-dark btn btn-warning mt-3 " %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
