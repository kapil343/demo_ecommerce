            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-primary mr-2 " %>
            <%= link_to "Account Setting", edit_user_registration_path, class: "btn btn-outline-primary  " %>
          <% end %>
          <% if current_user %>
            <%= link_to user_cart_path(current_user) do %>
            <%= image_tag "cart.png", class: "img-fluid rounded ", style: "width: 45px; height: 50px;margin:0 auto;"%>
            <% end %>
          <% else %>
            <%= link_to cart_path do %>
              <%= image_tag "cart.png", class: "img-fluid rounded ", style: "width: 45px; height: 50px;margin:0 auto;"%>
