<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <h2 class="text-light">Create Category</h2>
  <%= form_with model: [ category ] do |f| %>
    <% if category.errors.any? %>
      <div id="error_explanation">
        <h2 class="text-light "><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
        <ul>
          <% category.errors.full_messages.each do |msg| %>
            <li class="text-light "><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-outline mb-4 text-light">
      <%= f.label :name, class: "form-label"%>
      <%= f.text_field :name, required: true, autofocus: true, autocomplete: "category", class: "form-control"%>
    </div>
    <div>
      <%= f.submit "Submit", class: "actions mb-2 text-dark btn btn-warning mt-3 " %>
    </div>
  <% end %>
  <%= link_to "Back", categories_path %>
</div>
