<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <h2 class="text-light">Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-outline mb-4 text-light">
      <%= f.label :name, class: "form-label" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    <div class="form-outline mb-4 text-light">
      <%= f.label :phone, class: "form-label" %><br />
      <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
    </div>
    <div class="form-outline mb-4 text-light">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <%= f.fields_for :addresses do |address_fields| %>
      <div class="field form-outline mb-4 text-light">
        <%= address_fields.label :state, class: "form-label" %><br />
        <%= address_fields.text_field :state, autofocus: true, autocomplete: "state", class: "form-control" %>
      </div>
      <div class="field form-outline mb-4 text-light">
        <%= address_fields.label :city, class: "form-label" %><br />
        <%= address_fields.text_field :city, autofocus: true, autocomplete: "city", class: "form-control" %>
      </div>
      <div class="field form-outline mb-4 text-light">
        <%= address_fields.label :pincode, class: "form-label" %><br />
        <%= address_fields.text_field :pincode, autofocus: true, autocomplete: "pincode", class: "form-control" %>
      </div>
    <% end %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-light">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-outline mb-4 text-light">
      <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-outline mb-4 text-light">
      <%= f.label :password_confirmation, class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-outline mb-4 text-light">
      <%= f.label :current_password, class: "form-label" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>
    
    <% if current_user.addresses.any? %>
      <%= link_to "Manage Addresses", user_addresses_path(current_user), class: "btn btn-warning mb-2 mt-3" %>
    <% else %>
      <div class="actions">
        <%= link_to "Add Address", new_user_address_path(current_user), class: "btn btn-warning mb-2 mt-3" %>
      </div>
    <% end %>
    <%= f.submit "Update", class: "actions mb-2 text-dark btn btn-warning mt-3 " %>
  <% end %>
  <h3 class="text-light ">Cancel my account</h3>
  <div class="text-light ">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "actions mb-2 text-dark btn btn-warning mt-3 "  %></div>
  <%= link_to "Back", :back %>
</div>
